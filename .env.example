# Jira Connection
INPUT_BASEURL=https://company.atlassian.net
INPUT_USEREMAIL=your-email@example.com
INPUT_APITOKEN=your-api-token-here

# JQL Query
INPUT_JQL=project = ABC AND status = "In Progress" ORDER BY created DESC

# Optional: Request Configuration
INPUT_METHOD=auto
INPUT_MAXRESULTS=50

# Optional: Field Selection
INPUT_FIELDS=key,summary,status,assignee
INPUT_EXPAND=names,schema
INPUT_PROPERTIES=prop1,prop2
INPUT_FIELDSBYKEYS=false
INPUT_FAILFAST=false

# Optional: Output
INPUT_IDSONLY=false
INPUT_OUTPUTFILE=./jira-results.json

# Optional: Reconcile Issues
INPUT_RECONCILEISSUES=